{
    "compilerOptions": {
        "watch": true,
        "pretty": false,
        "sourceMap": true,
        "target": "ES2017",
        "outDir": "./src",
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
		"noImplicitReturns": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "noFallthroughCasesInSwitch": false
    },
    "include": ["src-ts/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
